<?xml version="1.0" encoding="UTF-8"?>
    <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    <mapper namespace="com.mvc.dao.Demo">
        <select id="getDemo" parameterType="String" resultType="com.mvc.dao.Demo">
            SELECT * FROM wd_test WHERE des=#{des}
        </select>
        <select id="getDemos" resultType="java.util.ArrayList">
            SELECT * FROM wd_test
        </select>
        <insert id="addDemo" parameterType="com.mvc.dao.Demo" flushCache="true">
          INSERT INTO wd_test des VALUES #{des}
        </insert>
        <update id="updateDemo" parameterType="com.mvc.dao.Demo">
            UPDATE wd_test SET des=#{des} WHERE id=#{id}
        </update>
        <delete id="deleteUser" parameterType="long">
            DELETE FROM wd_test WHERE id=#{id}
        </delete>
</mapper>